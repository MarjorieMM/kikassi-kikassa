{% extends './admin/base-admin.html.twig' %}
{% import './admin/_macros.html.twig' as macros %}


{% set envoi = "<div>" ~ form_widget(form.save) ~ "</div>" %}
{% set continue = "" %}
{# {% set arrowClass = 'd-none' %}
{% set footerPadding = 'm-padding' %} #}
{% set param = 'emprunts' %}
{% set pageUrl = 'admin_emprunts_new' %}

{% block title %}Objets
{% endblock %}

{% block body %}
	<body class={{color}} {{stimulus_controller('search', {url: path( pageUrl )} )}}>
		<div class="main-title font-raleway container">
			<h1 class="text-center font-raleway mb-5">Enregistrement d'un emprunt d'objet</h1>
			{{ macros.flash_message() }}
			<div class="container">
				{% include './admin/error_mess.html.twig' %}
			</div>
			<div class="col">
				{% include '/admin/forms/adherent_search.html.twig' %}
			</div>
			<div class="col">{% include '/admin/forms/objet_search.html.twig' %}
			</div>
			{{ form_start(form, {'attr': {'autocomplete' : 'off', 'novalidate' : true, 'class' : submitted ? submitted : "" }})}}
			<input id='hidden-adh' hidden type="text" name='adherent' data-search-target='adherent'/>
			<input id='hidden-obj' hidden type="text" name='objet' data-search-target='objet'/>
			<div class="container">
				<div class="row">
					<div class="col">
						<div class="form-group">
							{{ form_widget(form.date_debut ,  {'attr': {'class': 'form-control select-height'}}) }}
						</div>
					</div>
					<div class="col">
						<div class="form-group">
							{{ form_widget(form.date_fin ,  {'attr': {'class': 'form-control select-height'}}) }}
						</div>
					</div>
				</div>
				<div class="row">
					<div class="col">
						<div class="form-group">
							{{ form_widget(form.emprunt_regle ,  {'attr': {'class': 'form-control select-height'}}) }}
						</div>
					</div>
				</div>
				{{macros.footer_color(section, return_path, arrow, envoi, continue)}}
			</div>
		</div>
		{{ form_end(form)}}
	</body>
{% endblock %}
{% block footer %}{% endblock %}
