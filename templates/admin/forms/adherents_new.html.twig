{% extends './admin/base-admin.html.twig' %}
{% import './admin/_macros.html.twig' as macros %}


{% set envoi = "<div class='d-none envoi'>" ~ form_widget(form.save) ~ "</div>" %}
{% set continue = "<div class='d-none padding-footer continue'>" ~ form_widget(form.saveAndContinue) ~ "</div>" %}
{% set arrowClass = 'visible' %}
{% set footerPadding = 's-padding' %}

{% block title %}Adhérents
{% endblock %}


{% block body %}
	<body class={{color}}>
		{{ form_start(form, {'attr': {'autocomplete' : 'off'}})}}
		<div class="main-title font-raleway">
			<h1 class="first-part text-center font-raleway mb-5">Entrer un nouvel Adhérent</h1>
			<h1 class="second-part d-none text-center font-raleway mb-5">Entrer un nouvel Adhérent (suite)</h1>
			{% for label,messages in app.flashes %}
				<div class="container text-center my-5 ">
					<div class="alert alert-{{ label }}">
						{% for message in messages %}
							<p>{{message | raw }}</p>
						{% endfor %}
					</div>
				</div>
			{% endfor %}
			<div class="container first-part" data-controller="admin">
				<div class="row">
					<div class="col">
						<div class="form-group">
							{{ form_widget(form.nom, {'attr': {'class': 'form-control p-4'}}) }}
						</div>
					</div>
					<div class="col">
						<div class="form-group">
							{{ form_widget(form.prenom, {'attr': {'class': 'form-control p-4'}}) }}
						</div>
					</div>
				</div>
				<div class="row">
					<div class="col">
						<div class="form-group">
							{{ form_widget(form.date_naissance, {'attr': {'class': 'form-control p-4'}}) }}
						</div>
					</div>
					<div class="col">
						<div class="form-group">
							{{ form_widget(form.lieu_naissance, {'attr': {'class': 'form-control p-4'}}) }}
						</div>
					</div>
				</div>
				<div class="row">
					<div class="col">
						<div class="form-group">
							{{ form_widget(form.adresse, {'attr': {'class': 'form-control p-4'}}) }}
						</div>
					</div>
				</div>
				<div class="row">
					<div class="col">
						<div class="form-group">
							{{ form_widget(form.cp, {'attr': {'class': 'form-control p-4'}}) }}
						</div>
					</div>
					<div class="col">
						<div class="form-group">
							{{ form_widget(form.ville, {'attr': {'class': 'form-control p-4'}}) }}
						</div>
					</div>
				</div>
			</div>
			<div class="container second-part d-none">
				<div class="row">
					<div class="col">
						<div class="form-group">
							{{ form_widget(form.telephone, {'attr': {'class': 'form-control p-4'}}) }}
						</div>
					</div>
					<div class="col">
						<div class="form-group">
							{{ form_widget(form.email, {'attr': {'class': 'form-control p-4'}}) }}
						</div>
					</div>
				</div>
				<div class="row">
					<div class="col">
						<div class="form-group">
							{{ form_widget(form.montant_cotisation, {'attr': {'class': 'form-control p-4'}}) }}
						</div>
					</div>

				</div>
				<div class="row">
					<div class="col">
						<div class="form-group">
							{{ form_widget(form.moyen_paiement, {'attr': {'class': 'form-control select-height'}}) }}
						</div>
					</div>
					<div class="col">
						<div class="form-group">
							{{ form_widget(form.etat_cotisation, {'attr': {'class': 'form-control select-height'}}) }}
						</div>
					</div>
				</div>
				<div class="row">

					<div class="col">
						<div class="form-group">
							{{ form_widget(form.admin, {'attr': {'class': 'form-control select-height'}}) }}
						</div>
					</div>
					<div class="col">
						<div class="form-group biblio-select">
							<select type="radio" name="biblio" class="biblio form-control select-height">
								<option value="">Inscription à la bibliothèque</option>
								<option value="oui">Oui</option>
								<option value="non">Non</option>
							</select>
						</div>
					</div>
				</div>
			</div>
		</div>

		{{macros.footer_color(section, return_path, arrow, envoi, continue, arrowClass, footerPadding )}}
		{{ form_end(form)}}


	</body>
{% endblock %}
{% block footer %}{% endblock %}
