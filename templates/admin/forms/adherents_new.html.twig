{% extends './admin/base-admin.html.twig' %}
{% import './admin/_macros.html.twig' as macros %}


{% set envoi = "<div class='envoi' data-action='click->arrows#envoi' data-arrows-target='envoi'>" ~ form_widget(form.save) ~ "</div>" %}
{% set continue = "<div class='s-padding continue'  data-arrows-target='continue'>" ~ form_widget(form.saveAndContinue, {'attr' : {
'data-action':'arrows#continue'
}}) ~ "</div>" %}

{% block title %}Adhérents
{% endblock %}


{% block body %}
	<body class={{color}} data-controller="arrows">
		{{ form_start(form, {'attr': {'autocomplete' : 'off', 'novalidate' : true, 'class' : submitted ? submitted : "" }})}}
		<div class="main-title font-raleway">
			<h1 class="text-center font-raleway mb-5" data-arrows-target="firstTitle">Entrer un nouvel Adhérent</h1>
			<h1 class="text-center font-raleway mb-5" data-arrows-target="secondTitle">Entrer un nouvel Adhérent (suite)</h1>
			<div class="container">
				{% include './admin/error_mess.html.twig' %}
			</div>
			<div>
				<div class="container" data-arrows-target="firstPart">
					<div class="row">
						<div class="col">
							<div class="form-group">
								{{ form_widget(form.nom, {'attr': {'class': 'form-control p-4'}}) }}
							</div>
						</div>
						<div class="col">
							<div class="form-group">
								{{ form_widget(form.prenom, {'attr': {'class': 'form-control p-4'}}) }}
							</div>
						</div>
					</div>
					<div class="row">
						<div class="col">
							<div class="form-group">
								{{ form_widget(form.date_naissance, {'attr': {'class': 'form-control p-4'}}) }}
							</div>
						</div>
						<div class="col">
							<div class="form-group">
								{{ form_widget(form.lieu_naissance, {'attr': {'class': 'form-control p-4'}}) }}
							</div>
						</div>
					</div>
					<div class="row">
						<div class="col">
							<div class="form-group">
								{{ form_widget(form.adresse, {'attr': {'class': 'form-control p-4'}}) }}
							</div>
						</div>
					</div>
					<div class="row">
						<div class="col">
							<div class="form-group">
								{{ form_widget(form.cp, {'attr': {'class': 'form-control p-4'}}) }}
							</div>
						</div>
						<div class="col">
							<div class="form-group">
								{{ form_widget(form.ville, {'attr': {'class': 'form-control p-4'}}) }}
							</div>
						</div>
					</div>
				</div>
				<div class="container" data-arrows-target="secondPart">
					<div class="row">
						<div class="col">
							<div class="form-group">
								{{ form_widget(form.telephone, {'attr': {'class': 'form-control p-4'}}) }}
							</div>
						</div>
						<div class="col">
							<div class="form-group">
								{{ form_widget(form.email, {'attr': {'class': 'form-control p-4',  'data-arrows-target':'email', 'data-action':'arrows#emailChange'}}) }}
								<p class="email-obligatoire text-danger" data-arrows-target="emailObligatoire">Adresse email obligatoire pour l'inscription à la bibliothèque</p>
							</div>
						</div>
					</div>
					<div class="row">
						<div class="col">
							<div class="form-group">
								{{ form_widget(form.montant_cotisation, {'attr': {'class': 'form-control p-4'}}) }}
							</div>
						</div>
						<div class="col">
							<div class="form-group">
								{{ form_widget(form.moyen_paiement, {'attr': {'class': 'form-control select-height'}}) }}
							</div>
						</div>
					</div>
					<div class="row">
						<div class="col">
							<div class="form-group">
								{{ form_widget(form.etat_cotisation, {'attr': {'class': 'form-control select-height'}}) }}
							</div>
						</div>
						<div class="col">
							<div class="form-group biblio-select">
								<select type="radio" name="biblio" class="biblio form-control select-height" data-action="change->arrows#toggleBiblio" data-arrows-target='select' required>
									<option value="">Inscription à la bibliothèque</option>
									<option value="oui">Oui</option>
									<option value="non">Non</option>
								</select>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		{{macros.footer_color(section, return_path, envoi, continue )}}
		{{ form_end(form)}}
	</body>
{% endblock %}
{% block footer %}{% endblock %}
