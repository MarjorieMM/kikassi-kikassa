{# Macro pour l'affichage des modules de recherche #}

{% macro search_module(label, item, param, select, theads, searchTerm ) %}
	<div class="container my-2 mb-4 search-{{item}} d-block">
		<div class="row mx-4 justify-content-center">
			<div class="form-inline font-raleway flex-nowrap">
				<label class="mr-4" for="nom">{{label|raw}}
				</label>
				<div class="input-group">
					<input name="q" value="{{ searchTerm }}" placeholder="Recherchez un {{item}}" type="search" class="form-control select-height mr-4" data-action='search#onSearchInput'>
				</div>
			</div>
		</div>
		<div class="row font-raleway">
			<div class="col">
				<div class="mt-3 mx-4">
					<label>SÃ©lectionnez un
						{{select}}
						:
					</label>
					<table class="table admin-table-{{param}} tb-design table-bordered font-raleway">
						<thead>
							<tr class="text-center">
								{% for thead in theads %}
									<th scope="col">{{thead|raw}}</th>
								{% endfor %}
							</tr>
						</thead>
						<tbody id="search-results-{{item}}" data-search-target="result"></tbody>
					</table>
					<div class="d-flex justify-content-between align-items-center mb-3">
						<div id="selected-{{item}}"></div>

					</div>
				</div>
			</div>
		</div>
	</div>
{% endmacro %}
