{% import './admin/_macros.html.twig' as macros %}

<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>
	{# {% block header %}{% endblock %} #}

	{% block header %}
		{{macros.topnav_color(section)}}
	{% endblock %}
	<body>
		{% block body %}{% endblock %}
	</body>
	{% block footer %}
		<footer>
			{{macros.footer_color(section, return_path)}}
		</footer>
	{% endblock %}
</html>
